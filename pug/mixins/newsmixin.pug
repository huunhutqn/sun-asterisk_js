    .news__main__form__info
      .news__main__form__info__item
        input(type="text" placeholder="Họ và tên:")
      .news__main__form__info__item
        input(type="email" placeholder="Email:")
      .news__main__form__info__item
        input(type="text" placeholder="Phone:")
    .news__main__form__text
      textarea(rows="5" placeholder="Bình luận")
    .news__main__form__send
      button.news__main__form__send__btn Gửi
mixin news_detail(list)
  .news__main__detail
    each val in list
      .news__main__list__item
        h4.news__main__list__item__title
          a(href= val.url)= val.title
        .news__main__list__item__info
          span.news__main__list__item__info--date= val.date
          span.news__main__list__item__info--time= val.time
          span.news__main__list__item__info--comment= val.comment + " Bình luận"
        .news__main__list__item__image
          img(src= val.img)
        .news__main__list__item__desc
          a(href= val.url)= val.full_desc
